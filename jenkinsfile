pipeline {
    agent any
    
    environment {
        VENV_DIR = "venv"
    }
    
    stages {
        stage('Clone Repository') {
            steps {
                git (url: 'https://github.com/Mamatha1206/jenkins_practice.git', branch: 'main')
            }
        }
        
        stage('Setup Python Virtual Environment') {
            steps {
                sh 'rm -rf $VENV_DIR'  // Remove old venv
                sh 'python3 -m venv $VENV_DIR'  // Create new venv
                sh 'echo "Virtual Environment Created Successfully."'
            }
        }
        
        stage('Install Dependencies') {
            steps {
                sh '$VENV_DIR/bin/pip install --upgrade pip setuptools wheel'
                sh '$VENV_DIR/bin/pip install -r requirements.txt || echo "Warning: Some dependencies may not have installed properly."'
            }
        }
        
        stage('Run Tests') {
            steps {
                sh '$VENV_DIR/bin/python -m pytest tests/'  // Corrected test execution
            }
        }
        
        stage('Build Artifacts') {
            steps {
                sh '$VENV_DIR/bin/python setup.py bdist_wheel'
            }
        }
        
        stage('Archive Artifacts') {
            steps {
                archiveArtifacts artifacts: 'dist/*.whl', fingerprint: true
            }
        }
    }
    
    post {
        always {
            echo "Build process completed!"
        }
        failure {
            echo "Build failed! Check logs for errors."
        }
    }
}
